<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/btn_negative">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <corners android:radius="12dp" />
            <solid android:color="@color/color_sub_title" />
            <stroke android:width="1dp"
                android:color="@color/color_sub_title"/>
        </shape>
    </item>
    <item android:color="@color/btn_negative" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <corners android:radius="12dp" />
            <solid android:color="@color/btn_negative" />
            <stroke android:width="1dp"
                android:color="@color/color_sub_title"/>
        </shape>
    </item>
</selector>
