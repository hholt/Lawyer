<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_lawyer_avatar"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_my_avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lawyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/app_font_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/iv_lawyer_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_lawyer_avatar"
        tools:text="润玉律师" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lawyer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/shape_btn_bg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="执业律师"
        android:textColor="@color/app_font_white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lawyer_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_lawyer_name"
        app:layout_constraintTop_toTopOf="@+id/tv_lawyer_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lawyer_reply_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_article_sub"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_lawyer_name"
        app:layout_constraintTop_toBottomOf="@id/tv_lawyer_name"
        tools:text="回复次数：500次" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lawyer_reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_article_sub"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_lawyer_reply_count"
        tools:text="2019.12.31 10:20" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lawyer_reply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/app_font_gray"
        android:textSize="14sp"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_et_feedback_bg"
        app:layout_constraintTop_toBottomOf="@id/iv_lawyer_avatar"
        app:layout_constraintLeft_toLeftOf="@id/tv_lawyer_name"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="系统将g即将你的订单派发至指定律，优推荐，如平小时丙无律师接革。" />

</androidx.constraintlayout.widget.ConstraintLayout>