<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_service_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/app_font_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_service_img"
        app:layout_constraintTop_toTopOf="@+id/iv_service_img" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_service_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/app_font_gray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_service_img"
        app:layout_constraintLeft_toLeftOf="@+id/tv_service_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/app_padding_common"
        android:maxLines="1"
        android:textColor="@color/app_font_red"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_service_img" />

    <View
        android:id="@+id/dividing_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F9"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>