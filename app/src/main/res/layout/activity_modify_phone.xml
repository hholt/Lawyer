<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/app_padding_common"
        android:layout_marginTop="@dimen/app_padding_common"
        android:layout_marginRight="@dimen/app_padding_common"
        android:background="@drawable/shape_et_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入新手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="@dimen/app_padding_common"
            android:textSize="18sp" />

        <com.wl.widget.view.CountdownView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/app_padding_common"
            android:text="发送验证码"
            android:textColor="#F99806"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/app_padding_common"
        android:layout_marginTop="@dimen/app_padding_common"
        android:layout_marginRight="@dimen/app_padding_common"
        android:background="@drawable/shape_et_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/app_padding_common"
            android:textSize="18sp" />

    </LinearLayout>

    <include
        layout="@layout/adapter_setting_4"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginTop="10dp" />

</LinearLayout>