<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_choice_file"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/app_padding_common"
        android:background="@drawable/shape_file_bg"

        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="选择文件"
        android:textColor="@color/app_font_black"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_simple_subtext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/app_padding_common"
        android:layout_weight="1"
        android:background="@null"
        android:enabled="false"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="14sp" />

</LinearLayout>