<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="167dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_simple_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_padding_common"
        android:text="补充图片文件："
        android:layout_marginLeft="@dimen/app_padding_common"
        android:textColor="@color/app_font_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_simple_add"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_rect_10dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/tv_simple_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_simple_text">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>