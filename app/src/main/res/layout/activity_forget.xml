<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include" />

    <com.wl.lawyer.mvp.ui.widget.TextStatusView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:array="@array/array_forget" />

    <include
        android:id="@+id/register_2"
        layout="@layout/include_register_2"
        android:visibility="gone" />

    <include
        android:id="@+id/register_3"
        layout="@layout/include_register_3"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_btn_height"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_btn_bg"
        android:text="获取验证码"
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>